<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lz.example.android_gesture_sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CapturingTouchEventsActivity" />
        <activity android:name=".DetectGestureActivity" />
        <activity android:name=".SimpleOnGestureActivity" />
        <activity android:name=".TrackingMovement" />
        <activity android:name=".AnimatingScrollGestureActivity"></activity>
    </application>

</manifest>